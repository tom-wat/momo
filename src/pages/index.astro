---
import Loading from "../components/Loading.astro";
import Layout from "../layouts/Layout.astro";
import "../styles/global.css";
const transitionTime = "1s";
---

<Layout
  title="小説「モモ」紹介サイト"
  description="ミヒャエル・エンデの小説「モモ」を紹介するサイトです。"
>
  <body>
    <Loading />
    <div class="image-wrapper">
      <img class="cover" src="/momo/images/cover.avif" alt="" />
    </div>

    <main class="main">
      <img class="decoration" src="/momo/images/text-decoration.svg" alt="" />
      <h1>Momo</h1>
    </main>
  </body>
</Layout>

<style define:vars={{ transitionTime }}>
  main {
    display: grid;
    min-height: 100svh;
    place-content: center;
    background-image: url("/momo/images/paper.png");
    position: relative;
    opacity: 0;
    filter: blur(100px);
    transition:
      opacity var(--transitionTime),
      filter var(--transitionTime);
    &.loaded {
      opacity: 1;
      filter: blur(0px);
    }
  }
  main::before {
    content: "";
    display: block;
    background-image: url("/momo/images/decoration-line.svg");
    background-repeat: repeat-y;
    mix-blend-mode: multiply;
    width: 50px;
    height: 100%;
    position: absolute;
    top: 0;
    left: 20vw;
  }
  main::after {
    content: "";
    display: block;
    background-image: url("/momo/images/decoration-line.svg");
    background-repeat: repeat-y;
    mix-blend-mode: multiply;
    width: 50px;
    height: 100%;
    position: absolute;
    top: 0;
    right: 20vw;
    transform: rotate(180deg);
  }
  h1 {
    text-align: center;
  }
  .image-wrapper {
    min-height: 100svh;
    position: relative;
    background-color: white;
    & .cover {
      position: absolute;
      width: 100%;
      height: 100svh;
      object-fit: cover;
      opacity: 0;
      filter: blur(100px);
      transition:
        opacity var(--transitionTime),
        filter var(--transitionTime);
    }
    & .cover.loaded {
      opacity: 1;
      filter: blur(0px);
    }
  }
  .decoration {
    width: 250px;
    margin: 0 auto;
    mix-blend-mode: multiply;
  }
</style>
